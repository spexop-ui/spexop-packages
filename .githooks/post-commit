#!/bin/bash
# Post-commit hook to sync documentation to spexop-design-system

echo "ğŸ”„ Checking if documentation sync is needed..."

# Check if any documentation files were changed
if git diff-tree --no-commit-id --name-only -r HEAD | grep -E "(README\.md|USAGE-GUIDE\.md)$"; then
    echo "ğŸ“š Documentation files changed, syncing to spexop-design-system..."
    
    # Run sync in spexop-design-system repo
    cd /Users/olmstedian/__DEV__/spexop-design-system
    pnpm run sync-docs
    
    echo "âœ… Documentation synced successfully!"
else
    echo "â„¹ï¸  No documentation changes detected"
fi
