{
  "name": "@spexop/design-system-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "Spexop Design System - Professional React components with flexible theming",
  "author": "Spexop Team <contact@spexop.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spexop-ui/spexop-public.git"
  },
  "homepage": "https://www.spexop.com",
  "bugs": {
    "url": "https://github.com/spexop-ui/spexop-public/issues"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:theme": "pnpm --filter @spexop/theme build",
    "build:react": "pnpm --filter @spexop/react build",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "keywords": ["design-system", "react", "components", "theme", "spexop"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/jest-dom": "^6.1.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
