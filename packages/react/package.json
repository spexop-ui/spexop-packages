{
  "name": "@spexop/react",
  "version": "0.4.7",
  "description": "React component library with TypeScript and accessibility. 60+ components following the Primitives-First philosophy. Grid primitives, navigation, forms, buttons, cards, data, feedback, and more.",
  "keywords": [
    "react",
    "components",
    "design-system",
    "ui-library",
    "typescript",
    "primitives-first",
    "grid-system",
    "accessibility",
    "forms",
    "navigation",
    "css-modules",
    "theme",
    "responsive",
    "spexop",
    "spexop-design-system",
    "spexop-ui"
  ],
  "author": "Spexop Team <contact@spexop.com> (https://spexop.com)",
  "license": "MIT",
  "homepage": "https://spexop.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/spexop-ui/spexop-public.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/spexop-ui/spexop-public/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./dist/index.css": {
      "default": "./dist/index.css"
    },
    "./styles": {
      "default": "./dist/index.css"
    },
    "./templates": {
      "source": "./src/templates/index.ts",
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/src/templates.js"
    },
    "./templates/types": {
      "source": "./src/templates/types.ts",
      "types": "./dist/templates/types.d.ts",
      "import": "./dist/src/templates/types.js"
    },
    "./templates/registry": {
      "source": "./src/templates/registry/index.ts",
      "types": "./dist/templates/registry/index.d.ts",
      "import": "./dist/src/templates/registry.js"
    },
    "./templates/renderers": {
      "source": "./src/templates/renderers/index.ts",
      "types": "./dist/templates/renderers/index.d.ts",
      "import": "./dist/src/templates/renderers.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md",
    "MIGRATION-GUIDE.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --ui",
    "test:run": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@spexop/icons": "^0.6.0",
    "@spexop/theme": "^0.4.0",
    "@tiptap/extension-link": "^3.6.3",
    "@tiptap/extension-placeholder": "^3.6.3",
    "@tiptap/extension-underline": "^3.6.3",
    "@tiptap/react": "^3.6.3",
    "@tiptap/starter-kit": "^3.6.3",
    "chart.js": "^4.5.0",
    "react-chartjs-2": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0-rc || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0-rc || ^19.0.0"
  },
  "devDependencies": {
    "@spexop/tsconfig": "workspace:*",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.1",
    "esbuild-css-modules-plugin": "^3.1.5",
    "jsdom": "^27.0.1",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.5"
  }
}
