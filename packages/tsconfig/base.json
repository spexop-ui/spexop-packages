{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base TypeScript Config",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "incremental": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@spexop/components": ["../../packages/components/src"],
      "@spexop/utils": ["../../packages/utils/src"],
      "@spexop/icons": ["../../packages/icons/src"],
      "@spexop/react": ["../../packages/react/src"],
      "@spexop/vue": ["../../packages/vue/src"],
      "@spexop/angular": ["../../packages/angular/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".turbo",
    "coverage",
    "test-results",
    "playwright-report"
  ]
}
